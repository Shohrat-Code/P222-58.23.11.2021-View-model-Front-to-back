@model VmAcademy
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Student list</h1>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Age</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>

                    @foreach (var stu in Model.Students)
                    {
                        <tr>
                            <td>@stu.Id</td>
                            <td>@stu.Name</td>
                            <td>@stu.Surname</td>
                            <td>@stu.Age</td>
                            <td>@stu.Phone</td>
                            <td>@stu.Email</td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-lg-12">
                <h1>Group list</h1>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Room</th>
                        <th>Student count</th>
                    </tr>

                    @foreach (var grp in Model.Groups)
                    {
                        <tr>
                            <td>@grp.Id</td>
                            <td>@grp.Name</td>
                            <td>@grp.Room</td>
                            <td>@grp.StudentCount</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    
</div>